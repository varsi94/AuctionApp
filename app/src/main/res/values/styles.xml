<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_color</item>
    </style>

    <style name="textviewButtonStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/buttons_text_bg_selector</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cardTextStyle" parent="android:Widget.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="cardLayoutStyle" parent="android:Widget">
        <item name="android:background">@drawable/card_bg_selector</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="cardsListStyle" parent="android:Widget.ListView">
        <item name="android:divider">@null</item>
        <item name="android:background">@color/default_background</item>
    </style>
</resources>
